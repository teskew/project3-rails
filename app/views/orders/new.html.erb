<%= form_for([@company, @order]) do |f| %>
   <% if !@company %>
    <%= f.label :company %>
    <%= f.collection_select :company_id, Company.all, :id,  :name %><br><br>
    <% else %>
    <%= f.hidden_field :order_id%>
    <% end %>
    <%= f.label :type %>
    <%= f.text_field :type %> <br><br>
    <%= f.label :quantity %>
    <%= f.number_field :quantity  %><br><br>
    
    <%= f.submit %>
<% end %>

