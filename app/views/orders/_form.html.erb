<% if @order.errors.any? %>
<% @order.errors.full.messages.each do |mess| %>
<li style="color:" green><%=mess %></li>
   <% end %>
 <% end %>

        
<%= form_for([@company, @order]) do |f| %>
    <%= f.label :beer_name %>
    <%= f.text_field :beer_name %>
    <%= f.label :description %>
    <%= f.text_field :description %> 
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>

    <% if @company %> 
    
        <h4>Create  Company:</h4>
            <%= f.fields_for :company do |order| %>
                <%= order.label :company_name %>
                <%= order.text_field :company_name %>
            <% end %>
    <% end %> 
    <%= f.submit %>
<% end %>
